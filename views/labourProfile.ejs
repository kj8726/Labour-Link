<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Labour Link - Labour Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/labourProfile.css">
</head>
<body>
    <!-- Header -->
    <header class="profile-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="profile-avatar">
                        <img src="<%= labour.profilePic || 'https://randomuser.me/api/portraits/men/75.jpg' %>" alt="Labour Profile">
                    </div>
                    <div>
                        <% if (typeof labour !== 'undefined' && labour) { %>
                            <h1 class="h3 mb-1"><%= labour.name %></h1>
                            <p class="mb-0">
                                <i class="fas fa-briefcase me-1"></i>
                                <%= labour.profession %>
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <% if (labour.address && labour.address.city) { %>
                                    <%= labour.address.city %>, USA
                                <% } else { %>
                                    New York, USA
                                <% } %>
                            </p>
                            <div class="rating">
                                <% for(let i = 1; i <= 5; i++) { %>
                                    <% if(i <= Math.floor(labour.rating)) { %>
                                        <i class="fas fa-star"></i>
                                    <% } else if(i === Math.ceil(labour.rating) && labour.rating % 1 !== 0) { %>
                                        <i class="fas fa-star-half-alt"></i>
                                    <% } else { %>
                                        <i class="far fa-star"></i>
                                    <% } %>
                                <% } %>
                                <span><%= labour.rating %> (<%= labour.totalReviews %> reviews)</span>
                            </div>
                        <% } else { %>
                            <h1 class="h3 mb-1">Labour Profile</h1>
                            <p class="mb-0">Please log in to view your profile</p>
                        <% } %>
                    </div>
                </div>
                <div>
                    <a href="/" class="btn btn-light me-2">
                        <i class="fas fa-home me-1"></i> Home
                    </a>
                    
                    <a href="/logout" class="btn btn-outline-light">
                        <i class="fas fa-sign-out-alt me-1"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- Profile Type Selector -->
        

        <% if (typeof labour !== 'undefined' && labour) { %>
            <div class="row">
                <!-- Personal Information -->
                <div class="col-md-6">
                    <div class="card profile-card">
                        <div class="card-body">
                            <h3 class="section-title">
                                <i class="fas fa-user-circle me-2"></i>Personal Information
                            </h3>
                            
                            <div class="info-group">
                                <label>Full Name</label>
                                <p class="mb-0"><%= labour.name %></p>
                            </div>
                            
                            <div class="info-group">
                                <label>Age</label>
                                <p class="mb-0"><%= labour.age %> years</p>
                            </div>
                            
                            <div class="info-group">
                                <label>Email Address</label>
                                <p class="mb-0">
                                    <i class="fas fa-envelope me-2 text-muted"></i>
                                    <%= labour.email %>
                                </p>
                            </div>
                            
                            <div class="info-group">
                                <label>Phone Number</label>
                                <p class="mb-0">
                                    <i class="fas fa-phone me-2 text-muted"></i>
                                    <%= labour.phone %>
                                </p>
                            </div>
                            
                            <div class="info-group">
                                <label>Profession</label>
                                <p class="mb-0"><%= labour.profession %></p>
                            </div>
                            
                            <div class="info-group">
                                <label>Experience</label>
                                <p class="mb-0"><%= labour.experience %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Wage Information -->
                    <div class="card profile-card">
                        <div class="card-body">
                            <h3 class="section-title">
                                <i class="fas fa-money-bill-wave me-2"></i>Wage Information
                            </h3>
                            
                            <form action="/update-wage" method="POST">
                                <div class="wage-info">
                                    <div class="wage-option">
                                        <input type="radio" id="perhour" name="wageType" value="perhour" checked>
                                        <label for="perhour">$<%= labour.wagePerHour %> per hour</label>
                                    </div>
                                    <div class="wage-option">
                                        <input type="radio" id="perday" name="wageType" value="perday">
                                        <label for="perday">$<%= labour.wagePerDay %> per day</label>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save me-2"></i>Update Wage
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Previous Work & Quick Actions -->
                <div class="col-md-6">
                    <div class="card profile-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3 class="section-title mb-0">
                                    <i class="fas fa-briefcase me-2"></i>Previous Work
                                </h3>
                                <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addWorkModal">
                                    <i class="fas fa-plus me-1"></i>Add Work
                                </button>
                            </div>
                            
                            <% if (works && works.length > 0) { %>
                                <div class="works-list">
                                    <% works.forEach(function(work) { %>
                                        <div class="work-item">
                                            <div class="work-details">
                                                <h5 class="mb-1"><%= work.title %></h5>
                                                <p class="text-muted mb-1">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    <%= new Date(work.completedDate).toLocaleDateString() %>
                                                </p>
                                                <% if (work.clientName) { %>
                                                    <p class="text-muted mb-1">
                                                        <i class="fas fa-user me-1"></i>
                                                        Client: <%= work.clientName %>
                                                    </p>
                                                <% } %>
                                                <div class="rating">
                                                    <% for(let i = 1; i <= 5; i++) { %>
                                                        <% if(i <= Math.floor(work.rating)) { %>
                                                            <i class="fas fa-star"></i>
                                                        <% } else if(i === Math.ceil(work.rating) && work.rating % 1 !== 0) { %>
                                                            <i class="fas fa-star-half-alt"></i>
                                                        <% } else { %>
                                                            <i class="far fa-star"></i>
                                                        <% } %>
                                                    <% } %>
                                                    <span><%= work.rating %></span>
                                                </div>
                                            </div>
                                            <% if (work.images && work.images.length > 0) { %>
                                                <div class="work-image">
                                                    <img src="<%= work.images[0] %>" alt="Work Sample">
                                                </div>
                                            <% } %>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No previous work found.</p>
                                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addWorkModal">
                                        <i class="fas fa-plus me-2"></i>Add Your First Work
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Quick Actions -->
                    <div class="card profile-card">
                        <div class="card-body">
                            <h3 class="section-title">
                                <i class="fas fa-bolt me-2"></i>Quick Actions
                            </h3>
                            <div class="row g-2">
                                <div class="col-6">
                                    <a href="/available-orders" class="btn btn-outline-success w-100">
                                        <i class="fas fa-list me-1"></i>View Orders
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="/editprofile" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-edit me-1"></i>Edit Profile
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="/settings" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-cog me-1"></i>Settings
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="/help" class="btn btn-outline-info w-100">
                                        <i class="fas fa-question-circle me-1"></i>Help
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="card profile-card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h3>Profile Not Found</h3>
                    <p class="text-muted">Unable to load labour profile. Please try logging in again.</p>
                    <a href="/" class="btn btn-success">Go to Login</a>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Add Work Modal -->
    <div class="modal fade" id="addWorkModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Work</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/add-work" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Work Title</label>
                            <input type="text" class="form-control" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Client Name</label>
                            <input type="text" class="form-control" name="clientName">
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Completion Date</label>
                            <input type="date" class="form-control" name="completedDate">
                        </div>
                        
                        <!-- Image Upload Field -->
                        <div class="mb-3">
                            <label class="form-label">Work Images</label>
                            <input type="file" class="form-control" name="workImages" multiple accept="image/*">
                            <div class="form-text">You can select multiple images to upload</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Work</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Labour Link</h5>
                    <p class="mb-0">Connecting customers with skilled labour in their vicinity</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2023 Labour Link. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>