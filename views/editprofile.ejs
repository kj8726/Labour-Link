<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Labour Link - Edit Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/editprofile.css">
</head>
<body>
    <!-- Header -->
    <header class="edit-profile-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="profile-avatar">
                        <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>" alt="<%= user.name %>">
                        <% } else { %>
                            <i class="fas fa-user-edit"></i>
                        <% } %>
                    </div>
                    <div>
                        <h1 class="h3 mb-1">Edit Profile</h1>
                        <p class="mb-0">
                            <i class="fas fa-user me-1"></i>
                            Update your personal information
                        </p>
                    </div>
                </div>
                <div>
                    <% if (user.userType === 'customer') { %>
                        <a href="/profile/customer" class="btn btn-outline-light me-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to Profile
                        </a>
                    <% } else { %>
                        <a href="/profile/labour" class="btn btn-outline-light me-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to Profile
                        </a>
                    <% } %>
                    <a href="/logout" class="btn btn-light">
                        <i class="fas fa-sign-out-alt me-1"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card edit-profile-card">
                    <div class="card-body">
                        <!-- FIXED: Added enctype="multipart/form-data" for file uploads -->
                        <form action="/update-profile" method="POST" id="editProfileForm" enctype="multipart/form-data">
                            <!-- Personal Information Section -->
                            <div class="section">
                                <h3 class="section-title">
                                    <i class="fas fa-user-circle me-2"></i>Personal Information
                                </h3>

                                <!-- Profile Image Upload -->
                                <div class="form-group">
                                    <label for="profileImage" class="form-label">Profile Image</label>
                                    <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*">
                                    <% if (user.profileImage) { %>
                                        <div class="mt-2">
                                            <small class="text-muted">Current Image:</small>
                                            <div class="d-flex align-items-center mt-1">
                                                <img src="<%= user.profileImage %>" alt="Current Profile" class="img-thumbnail me-2" style="max-width: 80px; max-height: 80px;">
                                                <small class="text-muted">This image will be replaced if you upload a new one.</small>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <div class="mt-1">
                                            <small class="text-muted">No profile image set. Upload an image (JPEG, PNG, GIF, max 5MB).</small>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="name" class="form-label">Full Name *</label>
                                            <input type="text" class="form-control" id="name" name="name" 
                                                   value="<%= user.name %>" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="age" class="form-label">Age *</label>
                                            <input type="number" class="form-control" id="age" name="age" 
                                                   value="<%= user.age %>" required min="18" max="100">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="email" class="form-label">Email Address *</label>
                                            <input type="email" class="form-control" id="email" name="email" 
                                                   value="<%= user.email %>" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="phone" class="form-label">Phone Number *</label>
                                            <input type="tel" class="form-control" id="phone" name="phone" 
                                                   value="<%= user.phone %>" required>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Address Information -->
                            <div class="section">
                                <h3 class="section-title">
                                    <i class="fas fa-map-marker-alt me-2"></i>Address Information
                                </h3>
                                
                                <div class="form-group">
                                    <label for="street" class="form-label">Street Address</label>
                                    <input type="text" class="form-control" id="street" name="street" 
                                           value="<%= user.address && user.address.street ? user.address.street : '' %>">
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="city" class="form-label">City</label>
                                            <input type="text" class="form-control" id="city" name="city" 
                                                   value="<%= user.address && user.address.city ? user.address.city : '' %>">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="state" class="form-label">State</label>
                                            <input type="text" class="form-control" id="state" name="state" 
                                                   value="<%= user.address && user.address.state ? user.address.state : '' %>">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="zipCode" class="form-label">ZIP Code</label>
                                            <input type="text" class="form-control" id="zipCode" name="zipCode" 
                                                   value="<%= user.address && user.address.zipCode ? user.address.zipCode : '' %>">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Labour Specific Fields -->
                            <% if (user.userType === 'labour') { %>
                                <div class="section labour-fields">
                                    <h3 class="section-title">
                                        <i class="fas fa-briefcase me-2"></i>Professional Information
                                    </h3>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="profession" class="form-label">Profession *</label>
                                                <select class="form-control" id="profession" name="profession" required>
                                                    <option value="">Select Profession</option>
                                                    <option value="Plumber" <%= user.profession === 'Plumber' ? 'selected' : '' %>>Plumber</option>
                                                    <option value="Electrician" <%= user.profession === 'Electrician' ? 'selected' : '' %>>Electrician</option>
                                                    <option value="Carpenter" <%= user.profession === 'Carpenter' ? 'selected' : '' %>>Carpenter</option>
                                                    <option value="Painter" <%= user.profession === 'Painter' ? 'selected' : '' %>>Painter</option>
                                                    <option value="Mason" <%= user.profession === 'Mason' ? 'selected' : '' %>>Mason</option>
                                                    <option value="Welder" <%= user.profession === 'Welder' ? 'selected' : '' %>>Welder</option>
                                                    <option value="Mechanic" <%= user.profession === 'Mechanic' ? 'selected' : '' %>>Mechanic</option>
                                                    <option value="Gardener" <%= user.profession === 'Gardener' ? 'selected' : '' %>>Gardener</option>
                                                    <option value="Cleaner" <%= user.profession === 'Cleaner' ? 'selected' : '' %>>Cleaner</option>
                                                    <option value="Other" <%= user.profession === 'Other' ? 'selected' : '' %>>Other</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="experience" class="form-label">Experience *</label>
                                                <select class="form-control" id="experience" name="experience" required>
                                                    <option value="">Select Experience</option>
                                                    <option value="0-1 years" <%= user.experience === '0-1 years' ? 'selected' : '' %>>0-1 years</option>
                                                    <option value="1-3 years" <%= user.experience === '1-3 years' ? 'selected' : '' %>>1-3 years</option>
                                                    <option value="3-5 years" <%= user.experience === '3-5 years' ? 'selected' : '' %>>3-5 years</option>
                                                    <option value="5-10 years" <%= user.experience === '5-10 years' ? 'selected' : '' %>>5-10 years</option>
                                                    <option value="10+ years" <%= user.experience === '10+ years' ? 'selected' : '' %>>10+ years</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="wagePerHour" class="form-label">Wage per Hour ($) *</label>
                                                <input type="number" class="form-control" id="wagePerHour" name="wagePerHour" 
                                                       value="<%= user.wagePerHour %>" required min="1" step="0.01">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="wagePerDay" class="form-label">Wage per Day ($) *</label>
                                                <input type="number" class="form-control" id="wagePerDay" name="wagePerDay" 
                                                       value="<%= user.wagePerDay %>" required min="1" step="0.01">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Form Actions -->
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <% if (user.userType === 'customer') { %>
                                            <a href="/profile/customer" class="btn btn-secondary w-100">
                                                <i class="fas fa-times me-2"></i>Cancel
                                            </a>
                                        <% } else { %>
                                            <a href="/profile/labour" class="btn btn-secondary w-100">
                                                <i class="fas fa-times me-2"></i>Cancel
                                            </a>
                                        <% } %>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="fas fa-save me-2"></i>Save Changes
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Labour Link</h5>
                    <p class="mb-0">Connecting customers with skilled labour in their vicinity</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2023 Labour Link. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('editProfileForm');
            
            // File size validation
            const fileInput = document.getElementById('profileImage');
            if (fileInput) {
                fileInput.addEventListener('change', function() {
                    const file = this.files[0];
                    if (file) {
                        const fileSize = file.size / 1024 / 1024; // in MB
                        if (fileSize > 5) {
                            alert('File size must be less than 5MB');
                            this.value = ''; // Clear the file input
                        }
                        
                        // Validate file type
                        const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                        if (!allowedTypes.includes(file.type)) {
                            alert('Please select a valid image file (JPEG, PNG, GIF)');
                            this.value = ''; // Clear the file input
                        }
                    }
                });
            }
            
            // Form validation
            form.addEventListener('submit', function(e) {
                let isValid = true;
                const requiredFields = form.querySelectorAll('[required]');
                
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.classList.add('is-invalid');
                    } else {
                        field.classList.remove('is-invalid');
                    }
                });
                
                // File validation
                if (fileInput && fileInput.files.length > 0) {
                    const file = fileInput.files[0];
                    const fileSize = file.size / 1024 / 1024;
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                    
                    if (fileSize > 5) {
                        isValid = false;
                        alert('File size must be less than 5MB');
                    }
                    
                    if (!allowedTypes.includes(file.type)) {
                        isValid = false;
                        alert('Please select a valid image file (JPEG, PNG, GIF)');
                    }
                }
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Please fix the errors before submitting.');
                }
            });
            
            // Real-time validation
            const inputs = form.querySelectorAll('input, select');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.hasAttribute('required') && !this.value.trim()) {
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.remove('is-invalid');
                    }
                });
            });
            
            // Wage validation for labour
            const wagePerHour = document.getElementById('wagePerHour');
            const wagePerDay = document.getElementById('wagePerDay');
            
            if (wagePerHour && wagePerDay) {
                wagePerHour.addEventListener('input', function() {
                    if (this.value && !wagePerDay.value) {
                        wagePerDay.value = (this.value * 8).toFixed(2);
                    }
                });
                
                wagePerDay.addEventListener('input', function() {
                    if (this.value && !wagePerHour.value) {
                        wagePerHour.value = (this.value / 8).toFixed(2);
                    }
                });
            }
        });
    </script>
</body>
</html>